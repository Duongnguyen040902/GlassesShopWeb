@model Group4_GlassesShop.Models.DataModel.Blog
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Group4_GlassesShop.Models.DataModel.GlassesShopContext context = new Group4_GlassesShop.Models.DataModel.GlassesShopContext();
    Group4_GlassesShop.Utils.SplitString split = new Group4_GlassesShop.Utils.SplitString();
}

<!-- Blog Details Hero Begin -->
<section class="blog-hero spad">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-9 text-center">
                <div class="blog__hero__text">
                    <h2>@Model.Title</h2>
                    <ul>
                        <li>@Model.PuslishDate.ToString("dd MMMM yyyy")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-12">
                <div class="blog__details__pic">
                    <img src="@Model.Image" alt="" style="min-width: 50%;max-width: 50%;">
                </div>
            </div>

            <div class="col-lg-8">
                <div class="blog__details__content">
                    <div class="blog__details__text">
                        @foreach (var sentence in split.SplitParagraphIntoSentences(Model.Content))
                        {
                            <p>
                                @sentence
                            </p>
                        }
                    </div>
                    <div class="blog__details__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="blog__details__author">
                                    <div class="blog__details__author__text">
                                        <h5>Glasses Shop</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
